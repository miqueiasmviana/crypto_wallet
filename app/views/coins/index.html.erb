<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Coins</h1>
    <%= link_to "New coin", new_coin_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="coins" class="min-w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="table table-hover">
            <thead class="bg-gray-200 border-b">
              <tr class="grid grid-cols-6 gap-3">
                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left"><%= @coins.human_attribute_name(:description) %></th>
                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left"><%= @coins.human_attribute_name(:acronym) %></th>
                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left"><%= @coins.human_attribute_name(:url_image) %></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @coins.each do |coin| %>
                <tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-100 grid grid-cols-6 gap-3">
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= coin.description %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= coin.acronym %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"> <%= image_tag coin.url_image, size: "25x25" %> </td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= link_to t('links.show'), coin %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('messages.confirm') } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
