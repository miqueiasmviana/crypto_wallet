<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Mining types</h1>
    <%= link_to "New mining type", new_mining_type_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="mining_types" class="min-w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="table table-hover">
            <thead class="bg-gray-200 border-b">
              <tr class="grid grid-cols-5 gap-3">
                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left"><%= @mining_types.human_attribute_name(:description) %></th>
                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left"><%= @mining_types.human_attribute_name(:acronym) %></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @mining_types.each do |mining_type| %>
                <tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-100 grid grid-cols-5 gap-3">
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= mining_type.description %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= mining_type.acronym %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= link_to t('links.show'), mining_type %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('messages.confirm') } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
