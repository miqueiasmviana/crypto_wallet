<div id="<%= dom_id mining_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= mining_type.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Acronym:</strong>
    <%= mining_type.acronym %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this mining type", mining_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this mining type", edit_mining_type_path(mining_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
